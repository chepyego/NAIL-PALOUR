<div class="w-full py-10">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Services" %>

  <div class="text-center">
    <h1 class="font-bold text-4xl text-center mb-4 text-gray-900">Services</h1>
    <%= link_to "New service", new_service_path, class: "hidden rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="services" class="min-w-full md:flex  flex-wrap gap-10 mx-auto justify-center px-6">
    <% @services.each do |service| %>
      <%= render service %><br>
      
    <% end %>
  </div>
</div>
